<% content_for :title, "Musics" %>

<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Musics</h1>
    <%= link_to "New music", new_music_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="musics" class="min-w-full">
    <% if @musics.any? %>
      <% @musics.each do |music| %>
        <%= render music %>
        <p>
          <%= link_to "Show this music", music, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        </p>
      <% end %>
    <% else %>
      <p class="text-center my-10">No musics found.</p>
    <% end %>
  </div>
</div>
